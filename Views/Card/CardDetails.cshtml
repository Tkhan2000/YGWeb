@model YGWeb.Models.Card
@{
    ViewData["Title"] = "CardDetails";
    Layout = null;
    bool isMonster = false;
    string imageURL;
    string name;
    string description;
    string cardType;
    if (Model.type.Contains("Monster"))
    {
        isMonster = true;
    }

    if (Model == null)
    {
        imageURL = "https://ms.yugipedia.com//4/4a/Back-AE.png";
        name = "Name Not Found";
        description = "Seems like there was an error retrieving card information";
        cardType = "";
    }
    else
    {
        imageURL = Model.image_url;
        name = Model.name;
        description = Model.description;
        cardType = Model.type;
    }
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .card-container {
            display: flex; /* Use flexbox to align items horizontally */
            align-items: flex-start; /* Center items vertically */
        }

        .card-image {
            max-width: 300px; /* Set the maximum width for the image */
            height: auto; /* Allow the image to maintain its aspect ratio */
        }

        .card-text {
            margin-left: 20px; /* Add some space between the image and text */
            
        }
    </style>
</head>
<body class="card-container">
    <div class="card-container">
        <img src=@imageURL alt="Card Image" class="card-image">
        <div class="card-text">
            <h2>@name</h2>
            <b>@cardType   |   @Model.race</b>
            @if (isMonster)
            {
                <br/>
                <b>Atk: @Model.atk   Def: @Model.def</b>
                <br />
                <b class="pb-0">Level: @Model.level</b>
            }
            <hr/>
            <p>@description</p>
        </div>
    </div>
</body>
</html>